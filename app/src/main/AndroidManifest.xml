<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.epfl.sweng.swenggolf">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".database.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name="ch.epfl.sweng.swenggolf.main.MainActivity"/>

        <activity android:name="ch.epfl.sweng.swenggolf.main.MainMenuActivity"/>

        <activity android:name="ch.epfl.sweng.swenggolf.database.CreateUserActivity"/>


        <activity
            android:name=".profile.ProfileActivity"
            android:label="@string/profile_activity_name"
            android:parentActivityName=".main.MainActivity" />
        <activity
            android:name=".profile.EditProfileActivity"
            android:label="@string/edit_profile_activity_name"
            android:parentActivityName=".profile.ProfileActivity" />
        <activity android:name=".offer.CreateOfferActivity" />
        <activity android:name=".offer.ListOfferActivity" />
        <activity android:name=".offer.ShowOfferActivity" />
        <activity android:name=".database.WaitingActivity"></activity>
    </application>

</manifest>